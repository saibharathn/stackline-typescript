{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "lib": ["DOM", "ES6"],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true // Enable importing JSON files
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
